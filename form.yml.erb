  slurm_partition:
    label: Queue
    help: Select queue from the drop-down
  <%- if queues.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <% queues.each do |val| %>
    <%  p = val.split(",")[0] %>
    <%  pp = val.split(",")[0].ljust(24,'-') %>
    <%  t = val.split(",")[1].rjust(24) %>
      - [ " <%= pp %>-- Max Time: <%= t %>" , "<%= p %>"]
    <% end %>
  <% end %> 

  slurm_account:
    label: Account
    help: Account under which to run the job
  <%- if accounts.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <%- accounts.each do |a| -%>
      - [ "<%= a %>", "<%= a %>" ]
    <%- end -%>
  <%- end -%>

  bc_num_slots: "1"

  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 2
    help: |
      Number of cores.
    min: 0
    max: 36
    step: 1
    id: 'num_cores'
    required: true

  mem_req:
    label: "Memory required"
    help: "If no unit specified, Megabytes.  Can use 'k', 'M', 'G' suffixes.  NO DECIMALS.  Example: 3072M"
    widget: text_field
    value: "6000M"

  job_name:
    label: "Job name"
    help: "Name of job shown in queue"
    value: "Ceres Desktop"
    widget: text_field

  slurm_qos:
    label: "QOS"
    help: "Job QOS, only required for priority partitions"
    value: "400thread"
    widget: select
    options:
    <% `sacctmgr show -PQrn associations User=${USER} | cut -d '|' -f 18 | sort -u`.split(",").each do |val| %>
      - ["<%= val %>", "<%= val %>"]
    <% end %>
    required: true


