<%-
        begin
        queues = File.readlines Dir.home + "/.slurm-partitions"
        accounts = File.readlines Dir.home + "/.slurm-accounts"
        qos = File.readlines Dir.home + "/.slurm-qos"
        error = ""
        end
-%>


---
cluster: 
  - "ceres"

attributes:
  desktop: "xfce"
  bc_vnc_idle: 0
  bc_vnc_resolution:
    required: true
  bc_queue:
    value: debug

  screen_size:
    widget: select
    label: "Screen Resolution"
    help: "Application display size"
    options:
      - [ "1024 x 768", "1024x768" ]
      - [ "1080p" , "1920x1080" ]
      - [ "1440p" , "2560x1440" ]
      - [ "2160p" , "3840x2160" ]

  custom_queue:
    label: Queue
    help: Select queue from the drop-down
  <%- if queues.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <% queues.each do |val| %>
    <%  p = val.split(",")[0] %>
    <%  pp = val.split(",")[0].ljust(24,'-') %>
    <%  t = val.split(",")[1].rjust(24) %>
      - [ " <%= pp %>-- Max Time: <%= t %>" , "<%= p %>"]
    <% end %>
  <% end %> 

  custom_account:
    label: Account
    help: Account under which to run the job
  <%- if accounts.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <%- accounts.each do |a| -%>
      - [ "<%= a %>", "<%= a.delete(' ') %>" ]
    <%- end -%>
  <%- end -%>

  bc_num_slots: "1"

  num_cores:
    widget: "number_field"
    label: "Number of cores"
    value: 2
    help: |
      Number of cores.
    min: 0
    max: 36
    step: 1
    id: 'num_cores'
    required: true

  mem_req:
    label: "Memory required"
    help: "If no unit specified, Megabytes.  Can use 'k', 'M', 'G' suffixes.  NO DECIMALS.  Example: 3072M"
    widget: text_field
    value: "6000M"

  job_name:
    label: "Job name"
    help: "Name of job shown in queue"
    value: "Ceres Desktop"
    widget: text_field

  slurm_qos:
    label: "QOS"
    help: "Job QOS, only required for priority partitions"
    value: "400thread"
    required: true
  <%- if qos.blank? -%>
    widget: text_field
  <%- else -%>
    widget: select
    options:
    <%- qos.each do |q| -%>
      - [ "<%= q %>", "<%= q %>" ]
    <%- end -%>
  <%- end -%>


form:
  - bc_vnc_idle
  - desktop
  - bc_vnc_resolution
  - custom_account
  - custom_queue
  - slurm_qos
  - bc_num_hours
  - bc_num_slots
  - num_cores
  - mem_req
  - job_name
  - screen_size  

