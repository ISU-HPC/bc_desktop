---
batch_connect:
  template: vnc

script:
  queue_name: "<%= custom_queue %>"
  accounting_id: "<%= slurm_account %>"
  native:
    - "--ntasks=<%= num_cores.blank? ? 1 : num_cores.to_i %>"
    - "--nodes=<%= bc_num_slots.blank? ? 1 : bc_num_slots.to_i %>"
    - "--mem=<%= mem_req %>" 
    - "--job-name=<%= job_name %>"
    <%- if custom_queue.include? "gpu" or custom_queue.include? "a100" -%>
    - "--gres=<%= gres %>"
    <%- end -%>
